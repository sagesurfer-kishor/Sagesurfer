<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/transparent"
    android:orientation="vertical">

    <!--<android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/margin_10"
        android:background="@color/white"
        android:elevation="12dp"
        app:cardCornerRadius="14dp"
        android:layout_centerHorizontal="true"
        android:innerRadius="0dp"
        android:shape="ring"
        android:thicknessRatio="1.9">-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/layout_rounded_shadow_list"
            android:orientation="vertical">

            <TextView
                android:id="@+id/my_sos_item_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="start"
                android:text="@string/action_failed"
                android:textColor="@color/text_color_primary"
                android:textSize="@dimen/text_size_20"
                style="@style/CustomFontStyleSecondary" />

            <TextView
                android:id="@+id/my_sos_item_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:text="@string/action_failed"
                android:textColor="@color/text_color_tertiary"
                android:textSize="@dimen/text_size_18"
                style="@style/CustomFontStyleSecondary" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:gravity="start|center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/my_sos_item_image_one"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:background="@drawable/primary_circle"
                    android:padding="5dp"
                    android:src="@drawable/ic_user_male" />

                <View
                    android:id="@+id/my_sos_item_line_one"
                    android:layout_width="70dp"
                    android:layout_height="5dp"
                    android:background="@drawable/red_dotted_line" />

                <ImageView
                    android:id="@+id/my_sos_item_image_two"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:background="@drawable/primary_circle"
                    android:padding="5dp"
                    android:src="@drawable/ic_user_male" />

                <View
                    android:id="@+id/my_sos_item_line_two"
                    android:layout_width="70dp"
                    android:layout_height="5dp"
                    android:background="@drawable/red_dotted_line" />

                <ImageView
                    android:id="@+id/my_sos_item_image_three"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:background="@drawable/primary_circle"
                    android:padding="5dp"
                    android:src="@drawable/ic_user_male" />

                <View
                    android:id="@+id/my_sos_item_line_three"
                    android:layout_width="70dp"
                    android:layout_height="5dp"
                    android:background="@drawable/red_dotted_line" />

                <ImageView
                    android:id="@+id/my_sos_item_image_four"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:background="@drawable/primary_circle"
                    android:padding="5dp"
                    android:src="@drawable/ic_user_male" />
            </LinearLayout>
        </LinearLayout>
    <!--</android.support.v7.widget.CardView>-->
</LinearLayout>
