<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativelayout_postcard_attachment_item"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:elevation="1.5dp"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:targetApi="lollipop">

    <ImageView
        android:id="@+id/attachment_list_item_thumbnail"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true" />

    <TextView
        android:id="@+id/attachment_list_item_thumbnail_text"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="@color/white"
        style="@style/CustomFontStylePrimary"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/attachment_list_item_thumbnail"
        android:orientation="vertical"
        android:paddingEnd="0dp"
        android:paddingStart="@dimen/activity_horizontal_margin">

        <TextView
            android:id="@+id/attachment_list_item_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:gravity="start"
            android:lines="1"
            android:text="@string/runtime_permissions_txt"
            android:textColor="@color/text_color_primary"
            android:textSize="@dimen/text_size_16"
            style="@style/CustomFontStyleSecondary" />

        <TextView
            android:id="@+id/attachment_list_item_size"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:singleLine="true"
            android:text="@string/app_name"
            android:textColor="@color/text_color_tertiary"
            android:textSize="@dimen/text_size_18"
            style="@style/CustomFontStyleSecondary" />

        <TextView
            android:id="@+id/attachment_list_item_remove"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:paddingBottom="10dp"
            android:paddingEnd="@dimen/activity_horizontal_margin"
            android:paddingStart="0dp"
            android:paddingTop="10dp"
            android:singleLine="true"
            android:text="@string/remove"
            android:textAllCaps="true"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/text_size_18"
            style="@style/CustomFontStylePrimary"
            android:visibility="gone" />

    </LinearLayout>
</RelativeLayout>