<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#D8DFE2">

    <LinearLayout
        android:id="@+id/cardview_actions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_16"
        android:layout_marginEnd="@dimen/margin_16"


        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/message_rounded_border"
        android:padding="5dp"
        android:visibility="visible">

        <EditText
            android:id="@+id/ed_search_friend"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:drawablePadding="10dp"
            android:gravity="start|center_vertical"
            android:hint="search"
            android:imeOptions="actionSearch"
            android:maxLength="30"
            android:padding="10dp"
            android:singleLine="true"
            android:textColor="@color/colorPrimary"
            android:textColorHint="@color/grey" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linealayout_error"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/emergency_layout"
        android:layout_below="@+id/cardview_actions"
        android:layout_alignParentStart="true"
        android:gravity="center"

        android:orientation="vertical"
        android:visibility="visible">

        <!--<androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imageview_error_icon"
            android:layout_width="200dp"
            android:layout_height="240dp" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/margin_50"
            android:gravity="center">-->

            <TextView
                android:id="@+id/textview_error_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/margin_10"
                android:gravity="center"
                android:text="@string/no_record_found"
                android:textColor="@color/black"
                android:textSize="18dp" />

      <!--  </androidx.cardview.widget.CardView>
-->
    </LinearLayout>


    <ExpandableListView
        android:id="@+id/expandablelistview_teams"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/cardview_actions"
        app:layout_constraintBottom_toTopOf="@+id/emergency_layout"
        android:layout_gravity="start"
        android:choiceMode="multipleChoice"
        android:dividerHeight="0.3dp"
        android:groupIndicator="@null"
        android:layout_marginTop="@dimen/margin_10"
        android:paddingBottom="5dp"
        android:layout_marginStart="@dimen/margin_16"
        android:layout_marginEnd="@dimen/margin_16"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/contacts_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/margin_10"
        android:layout_marginStart="@dimen/margin_16"
        android:layout_marginEnd="@dimen/margin_16"
        app:layout_constraintTop_toBottomOf="@+id/cardview_actions"
        app:layout_constraintBottom_toTopOf="@+id/emergency_layout"
        android:dividerHeight="1dp"
        android:paddingBottom="5dp"
        android:scrollbars="vertical" />

    <TextView
        android:id="@+id/tv_team_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/contacts_recycler_view"
        android:text=""
        android:layout_marginStart="@dimen/margin_16"
        android:textColor="@color/primaryTextColor"
        android:textStyle="bold"
        app:layout_goneMarginBottom="@dimen/margin_16"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <LinearLayout
        android:id="@+id/emergency_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingStart="@dimen/margin_16"
        android:visibility="visible"
        android:layout_marginBottom="@dimen/margin_5"
        android:paddingEnd="@dimen/margin_16"
        app:layout_constraintBottom_toTopOf="@+id/tv_team_count"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/emergency_message"
            android:textColor="@color/catalyst_redbox_background"
            />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
