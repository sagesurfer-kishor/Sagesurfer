<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/screen_background"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <include layout="@layout/activity_toolbar_layout" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical"
                android:padding="@dimen/activity_horizontal_margin">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/activity_vertical_margin"
                        android:layout_marginBottom="@dimen/activity_vertical_margin"
                        android:layout_weight="0.5"
                        app:hintEnabled="true">

                        <EditText
                            android:id="@+id/et_firstname"
                            style="@style/CustomFontStyleSecondary"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/first_name"
                            android:maxHeight="200dp"
                            android:maxLength="1000"
                            android:padding="10dp"
                            android:text=""
                            android:textColor="@color/text_color_primary"
                            android:textSize="@dimen/text_size_16" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/activity_vertical_margin"
                        android:layout_marginBottom="@dimen/activity_vertical_margin"
                        android:layout_weight="0.5"
                        app:hintEnabled="true">

                        <EditText
                            android:id="@+id/et_lastname"
                            style="@style/CustomFontStyleSecondary"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/last_name"
                            android:maxHeight="200dp"
                            android:maxLength="1000"
                            android:padding="10dp"
                            android:text=""
                            android:textColor="@color/text_color_primary"
                            android:textSize="@dimen/text_size_16" />
                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/activity_vertical_margin"
                    android:layout_marginBottom="@dimen/activity_vertical_margin"
                    app:hintEnabled="true">

                    <EditText
                        android:id="@+id/et_username"
                        style="@style/CustomFontStyleSecondary"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/username"
                        android:maxHeight="200dp"
                        android:maxLength="1000"
                        android:padding="10dp"
                        android:text=""
                        android:textColor="@color/text_color_primary"
                        android:textSize="@dimen/text_size_16" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/activity_vertical_margin"
                    android:layout_marginBottom="@dimen/activity_vertical_margin"
                    app:hintEnabled="true">

                    <EditText
                        android:id="@+id/et_email"
                        style="@style/CustomFontStyleSecondary"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/email"
                        android:maxHeight="200dp"
                        android:maxLength="1000"
                        android:padding="10dp"
                        android:text=""
                        android:textColor="@color/text_color_primary"
                        android:textSize="@dimen/text_size_16" />
                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    style="@style/CustomFontStyleSecondary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/activity_vertical_margin"
                    android:layout_marginBottom="@dimen/activity_vertical_margin"
                    android:gravity="start"
                    android:hint="@string/date_of_birth"
                    android:paddingStart="5dp"
                    android:paddingEnd="5dp"
                    android:textColor="@color/text_color_primary"
                    android:textSize="@dimen/text_size_12"
                    android:visibility="visible" />


                <TextView
                    android:id="@+id/textview_editprofile_dob"
                    style="@style/CustomFontStyleSecondary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/activity_vertical_margin"
                    android:background="@drawable/ic_bottom_line_down_arrow"
                    android:gravity="start"
                    android:hint="@string/date_of_birth"
                    android:paddingStart="10dp"
                    android:paddingEnd="5dp"
                    android:paddingBottom="7dp"
                    android:textColor="@color/text_color_primary"
                    android:textSize="@dimen/text_size_16"
                    android:visibility="visible" />

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/activity_vertical_margin"
                    android:layout_marginBottom="@dimen/activity_vertical_margin"
                    android:visibility="gone"
                    app:hintEnabled="true">

                    <EditText
                        android:id="@+id/edittext_editprofile_address"
                        style="@style/CustomFontStyleSecondary"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/address"
                        android:maxHeight="200dp"
                        android:maxLength="1000"
                        android:padding="10dp"
                        android:text=""
                        android:textColor="@color/text_color_primary"
                        android:textSize="@dimen/text_size_16" />
                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    style="@style/CustomFontStyleSecondary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="@dimen/activity_vertical_margin"
                    android:gravity="start"
                    android:hint="Country"
                    android:paddingStart="5dp"
                    android:textColor="@color/text_color_primary"
                    android:textSize="@dimen/text_size_12"
                    android:visibility="visible" />

                <Spinner
                    android:id="@+id/spinner_country_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/activity_vertical_margin"
                    android:background="@drawable/ic_bottom_line_down_arrow"
                    android:paddingEnd="5dp"
                    android:paddingBottom="7dp"
                    android:spinnerMode="dropdown"
                    android:textColor="@color/text_color_primary"
                    android:textSize="@dimen/text_size_14" />


                <TextView
                    style="@style/CustomFontStyleSecondary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="@dimen/activity_vertical_margin"
                    android:gravity="start"
                    android:hint="State"
                    android:paddingStart="5dp"
                    android:textColor="@color/text_color_primary"
                    android:textSize="@dimen/text_size_12"
                    android:visibility="visible" />

                <Spinner
                    android:id="@+id/spinner_state_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/activity_vertical_margin"
                    android:background="@drawable/ic_bottom_line_down_arrow"
                    android:paddingEnd="5dp"
                    android:paddingBottom="7dp"
                    android:spinnerMode="dropdown"
                    android:textColor="@color/text_color_primary"
                    android:textSize="@dimen/text_size_14" />

                <Spinner
                    android:id="@+id/spinner_state_list_one"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/activity_vertical_margin"
                    android:background="@drawable/ic_bottom_line_down_arrow"
                    android:paddingEnd="5dp"
                    android:paddingBottom="7dp"
                    android:spinnerMode="dropdown"
                    android:textColor="@color/text_color_primary"
                    android:textSize="@dimen/text_size_14"
                    android:visibility="gone" />


                <TextView
                    style="@style/CustomFontStyleSecondary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="@dimen/activity_vertical_margin"
                    android:gravity="start"
                    android:hint="City"
                    android:paddingStart="5dp"
                    android:textColor="@color/text_color_primary"
                    android:textSize="@dimen/text_size_12"
                    android:visibility="visible" />


                <Spinner
                    android:id="@+id/spinner_city_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/activity_vertical_margin"
                    android:background="@drawable/ic_bottom_line_down_arrow"
                    android:paddingEnd="5dp"
                    android:paddingBottom="7dp"
                    android:spinnerMode="dropdown"
                    android:textColor="@color/text_color_primary"
                    android:textSize="@dimen/text_size_14" />

                <Spinner
                    android:id="@+id/spinner_city_list_one"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/activity_vertical_margin"
                    android:background="@drawable/ic_bottom_line_down_arrow"
                    android:paddingEnd="5dp"
                    android:paddingBottom="7dp"
                    android:spinnerMode="dropdown"
                    android:textColor="@color/text_color_primary"
                    android:textSize="@dimen/text_size_14"
                    android:visibility="gone" />


            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>