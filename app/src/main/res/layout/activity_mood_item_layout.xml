<?xml version="1.0" encoding="utf-8"?><LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"    android:layout_width="match_parent"    android:layout_height="wrap_content"    android:layout_gravity="center"    android:orientation="vertical"    android:padding="5sp">    <LinearLayout        android:id="@+id/linearlayout_mood"        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:layout_margin="5dp"        android:orientation="vertical">        <androidx.appcompat.widget.AppCompatImageView            android:id="@+id/imageview_mood"            android:layout_width="70dp"            android:layout_height="70dp"            android:layout_gravity="center"            android:src="@drawable/mood_sad_moderate" />        <TextView            android:id="@+id/textview_mood"            style="@style/CustomFontStylePrimary"            android:layout_width="match_parent"            android:layout_height="match_parent"            android:layout_gravity="center"            android:gravity="center"            android:padding="3dp"            android:text="@string/sad"            android:textColor="@color/white"            android:textSize="@dimen/text_size_13" />    </LinearLayout></LinearLayout>