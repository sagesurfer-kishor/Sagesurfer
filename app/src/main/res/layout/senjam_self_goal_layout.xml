<?xml version="1.0" encoding="utf-8"?><RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:app="http://schemas.android.com/apk/res-auto"    xmlns:card_view="http://schemas.android.com/apk/res-auto"    xmlns:tools="http://schemas.android.com/tools"    android:layout_width="match_parent"    android:layout_height="match_parent"    android:fillViewport="true">    <RelativeLayout        android:layout_width="match_parent"        android:layout_height="wrap_content">        <androidx.appcompat.widget.Toolbar            android:id="@+id/activity_toolbar_layout"            android:layout_width="match_parent"            android:layout_height="@dimen/actionBarSize"            android:background="@color/colorPrimary"            android:contentInsetStart="0dp"            android:contentInsetLeft="0dp"            android:contentInsetEnd="0dp"            android:contentInsetRight="0dp"            android:elevation="0dp"            app:contentInsetEnd="0dp"            app:contentInsetLeft="0dp"            app:contentInsetRight="0dp"            app:contentInsetStart="0dp"            tools:context="com.sagesurfer.collaborativecares.MainActivity"            tools:targetApi="lollipop">            <RelativeLayout                android:layout_width="match_parent"                android:layout_height="match_parent">                <LinearLayout                    android:layout_width="match_parent"                    android:layout_height="match_parent"                    android:layout_alignParentStart="true"                    android:layout_toStartOf="@+id/textview_activitytoolbar_post"                    android:gravity="center_vertical|start"                    android:orientation="vertical">                    <TextView                        android:id="@+id/textview_activitytoolbar_title"                        style="@style/CustomFontStylePrimary"                        android:layout_width="match_parent"                        android:layout_height="wrap_content"                        android:gravity="center"                        android:maxLines="1"                        android:singleLine="true"                        android:text="@string/app_name"                        android:textAllCaps="false"                        android:textColor="@color/white"                        android:textSize="@dimen/text_size_16"                        android:visibility="gone" />                </LinearLayout>                <LinearLayout                    android:id="@+id/linearlayout_toolbar_self_goal_details"                    android:layout_width="wrap_content"                    android:layout_height="match_parent"                    android:layout_alignParentEnd="true"                    android:orientation="horizontal"                    android:visibility="visible">                    <androidx.appcompat.widget.AppCompatImageButton                        android:id="@+id/imagebutton_log_book"                        android:layout_width="wrap_content"                        android:layout_height="wrap_content"                        android:layout_alignParentEnd="true"                        android:layout_gravity="center"                        android:background="@null"                        android:paddingStart="@dimen/activity_horizontal_margin"                        android:paddingEnd="@dimen/activity_horizontal_margin"                        android:visibility="gone"                        app:srcCompat="@drawable/log_book_white_icon" />                    <androidx.appcompat.widget.AppCompatImageButton                        android:id="@+id/imagebutton_toolbar_submit"                        android:layout_width="@dimen/actionBarSize"                        android:layout_height="match_parent"                        android:layout_alignParentEnd="true"                        android:background="@null"                        android:paddingStart="@dimen/activity_horizontal_margin"                        android:paddingEnd="@dimen/activity_horizontal_margin"                        android:visibility="gone"                        app:srcCompat="@drawable/vi_check_white" />                    <androidx.appcompat.widget.AppCompatImageButton                        android:id="@+id/imagebutton_toolbar_edit"                        android:layout_width="@dimen/actionBarSize"                        android:layout_height="match_parent"                        android:background="@null"                        android:padding="@dimen/activity_horizontal_margin"                        android:visibility="gone"                        app:srcCompat="@drawable/vi_self_goal_edit" />                    <androidx.appcompat.widget.AppCompatImageButton                        android:id="@+id/imagebutton_toolbar_delete"                        android:layout_width="@dimen/actionBarSize"                        android:layout_height="match_parent"                        android:layout_alignParentEnd="true"                        android:background="@null"                        android:padding="@dimen/activity_horizontal_margin"                        android:visibility="gone"                        app:srcCompat="@drawable/vi_delete_white" />                </LinearLayout>            </RelativeLayout>        </androidx.appcompat.widget.Toolbar>        <ScrollView            android:layout_width="match_parent"            android:layout_height="match_parent"            android:layout_below="@+id/activity_toolbar_layout"            android:fillViewport="true">            <RelativeLayout                android:layout_width="match_parent"                android:layout_height="wrap_content">                <LinearLayout                    android:id="@+id/linear_layout_image_section"                    android:layout_width="match_parent"                    android:layout_height="wrap_content"                    android:background="@color/screen_background"                    android:orientation="vertical">                    <RelativeLayout                        android:layout_width="match_parent"                        android:layout_height="250dp"                        android:background="@color/screen_background">                        <ImageView                            android:id="@+id/imageview_selfgoaldetailsactivity_image"                            android:layout_width="match_parent"                            android:layout_height="wrap_content"                            android:adjustViewBounds="true"                            android:scaleType="fitXY"                            android:src="@drawable/ic_goal_placeholder" />                        <LinearLayout                            android:layout_width="match_parent"                            android:layout_height="wrap_content"                            android:layout_alignParentBottom="true"                            android:background="@color/background_color_black_transparent"                            android:gravity="center_vertical"                            android:orientation="vertical"                            android:padding="5dp">                            <TextView                                android:id="@+id/txt_goal_name"                                android:layout_width="match_parent"                                android:layout_height="wrap_content"                                android:layout_gravity="center"                                android:layout_marginLeft="5dp"                                android:layout_marginRight="5dp"                                android:text=""                                android:textColor="@color/white"                                android:textSize="18sp"                                android:textStyle="bold" />                            <TextView                                android:id="@+id/txt_goal_date"                                android:layout_width="match_parent"                                android:layout_height="wrap_content"                                android:layout_gravity="center"                                android:layout_marginLeft="5dp"                                android:layout_marginRight="5dp"                                android:text=""                                android:textColor="@color/white"                                android:textSize="16sp"                                android:textStyle="normal" />                        </LinearLayout>                    </RelativeLayout>                </LinearLayout>                <LinearLayout                    android:id="@+id/linear_layout_description"                    android:layout_width="match_parent"                    android:layout_height="wrap_content"                    android:layout_below="@id/linear_layout_image_section"                    android:layout_marginTop="10dp"                    android:gravity="center"                    android:orientation="vertical">                    <TextView                        android:id="@+id/txt_goal_description"                        style="@style/CustomFontStylePrimary"                        android:layout_width="match_parent"                        android:layout_height="wrap_content"                        android:layout_marginLeft="10dp"                        android:layout_marginRight="10dp"                        android:gravity="center_vertical"                        android:padding="0dp"                        android:text="@string/text_articles"                        android:textColor="@color/black"                        android:textSize="@dimen/text_size_18"                        android:textStyle="normal" />                </LinearLayout>                <LinearLayout                    android:id="@+id/linear_layout_card_view"                    android:layout_width="match_parent"                    android:layout_height="wrap_content"                    android:layout_below="@id/linear_layout_description"                    android:gravity="center"                    android:orientation="vertical"                    android:padding="0dp">                    <androidx.cardview.widget.CardView                        android:id="@+id/card_view_question_section"                        android:layout_width="match_parent"                        android:layout_height="wrap_content"                        android:layout_margin="5dp"                        card_view:cardBackgroundColor="@color/color_white"                        card_view:cardCornerRadius="5dp"                        card_view:cardElevation="5dp"                        card_view:cardUseCompatPadding="true">                        <LinearLayout                            android:layout_width="match_parent"                            android:layout_height="wrap_content"                            android:layout_margin="10dp"                            android:orientation="vertical">                            <LinearLayout                                android:id="@+id/linear_layout_question_section"                                android:layout_width="match_parent"                                android:layout_height="wrap_content"                                android:orientation="vertical"                                android:padding="0dp">                                <TextView                                    android:id="@+id/txt_question_title"                                    style="@style/CustomFontStylePrimary"                                    android:layout_width="match_parent"                                    android:layout_height="wrap_content"                                    android:gravity="start"                                    android:padding="5dp"                                    android:singleLine="true"                                    android:text="Question"                                    android:textColor="@color/colorPrimary"                                    android:textSize="18sp"                                    android:textStyle="bold" />                                <TextView                                    android:id="@+id/txt_question"                                    style="@style/CustomFontStylePrimary"                                    android:layout_width="match_parent"                                    android:layout_height="wrap_content"                                    android:gravity="start"                                    android:padding="5dp"                                    android:text=""                                    android:textColor="@color/black"                                    android:textSize="16sp"                                    android:textStyle="normal" />                            </LinearLayout>                            <RelativeLayout                                android:layout_width="match_parent"                                android:layout_height="wrap_content"                                android:layout_marginLeft="5dp"                                android:layout_marginTop="8dp"                                android:layout_marginRight="5dp"                                android:padding="0dp">                                <LinearLayout                                    android:id="@+id/linear_layout_yes_no"                                    android:layout_width="wrap_content"                                    android:layout_height="wrap_content"                                    android:layout_alignParentStart="true"                                    android:background="@drawable/radio_rounded_border"                                    android:orientation="horizontal">                                    <TextView                                        android:id="@+id/txt_yes"                                        android:layout_width="50dp"                                        android:layout_height="wrap_content"                                        android:background="@drawable/radio_yes_selector_green"                                        android:gravity="center"                                        android:padding="5dp"                                        android:tag="1"                                        android:text="Yes"                                        android:textSize="14sp" />                                    <TextView                                        android:id="@+id/txt_no"                                        android:layout_width="50dp"                                        android:layout_height="wrap_content"                                        android:gravity="center"                                        android:padding="5dp"                                        android:tag="0"                                        android:text="No"                                        android:textSize="14sp" />                                </LinearLayout>                                <LinearLayout                                    android:id="@+id/linear_layout_am_pm"                                    android:layout_width="wrap_content"                                    android:layout_height="wrap_content"                                    android:layout_marginLeft="40dp"                                    android:layout_toEndOf="@+id/linear_layout_yes_no"                                    android:background="@drawable/radio_rounded_border"                                    android:orientation="horizontal">                                    <TextView                                        android:id="@+id/txt_am"                                        android:layout_width="50dp"                                        android:layout_height="wrap_content"                                        android:background="@drawable/radio_yes_selector_green"                                        android:gravity="center"                                        android:padding="5dp"                                        android:text="AM"                                        android:textSize="14sp" />                                    <TextView                                        android:id="@+id/txt_pm"                                        android:layout_width="50dp"                                        android:layout_height="wrap_content"                                        android:gravity="center"                                        android:padding="5dp"                                        android:text="PM"                                        android:textSize="14sp" />                                </LinearLayout>                            </RelativeLayout>                            <LinearLayout                                android:id="@+id/linear_layout_divider_line"                                android:layout_width="match_parent"                                android:layout_height="wrap_content"                                android:layout_marginLeft="0dp"                                android:layout_marginTop="5dp"                                android:layout_marginRight="0dp"                                android:padding="10dp">                                <View                                    android:layout_width="match_parent"                                    android:layout_height="1dp"                                    android:background="@color/view_color"                                    android:padding="0dp" />                            </LinearLayout>                            <RelativeLayout                                android:id="@+id/relative_choose_date"                                android:layout_width="match_parent"                                android:layout_height="wrap_content"                                android:layout_marginLeft="0dp"                                android:layout_marginRight="0dp"                                android:orientation="vertical"                                android:padding="0dp">                                <TextView                                    android:id="@+id/txt_choose_date_title"                                    style="@style/CustomFontStylePrimary"                                    android:layout_width="match_parent"                                    android:layout_height="wrap_content"                                    android:gravity="start"                                    android:padding="5dp"                                    android:singleLine="true"                                    android:text="Choose Date"                                    android:textColor="@color/colorPrimary"                                    android:textSize="20sp"                                    android:textStyle="bold" />                                <TextView                                    android:id="@+id/txt_choose_date"                                    style="@style/CustomFontStylePrimary"                                    android:layout_width="wrap_content"                                    android:layout_height="wrap_content"                                    android:layout_below="@+id/txt_choose_date_title"                                    android:layout_gravity="center|center_vertical"                                    android:drawableLeft="@drawable/vi_calendar"                                    android:drawablePadding="10dp"                                    android:drawableTint="@color/color_black"                                    android:gravity="center_vertical"                                    android:padding="10dp"                                    android:singleLine="true"                                    android:text="2020-06-18"                                    android:textAlignment="gravity"                                    android:textColor="@color/color_black"                                    android:textSize="18sp" />                                <View                                    android:layout_width="match_parent"                                    android:layout_height="1dp"                                    android:layout_below="@+id/txt_choose_date"                                    android:layout_marginLeft="10dp"                                    android:layout_marginRight="100dp"                                    android:background="@color/view_color"                                    android:padding="1dp" />                            </RelativeLayout>                        </LinearLayout>                    </androidx.cardview.widget.CardView>                </LinearLayout>                <LinearLayout                    android:id="@+id/submit_btn_layout"                    android:layout_width="match_parent"                    android:layout_height="wrap_content"                    android:layout_below="@+id/linear_layout_card_view"                    android:layout_marginLeft="10dp"                    android:layout_marginTop="0dp"                    android:layout_marginRight="10dp"                    android:layout_marginBottom="0dp"                    android:orientation="horizontal"                    android:visibility="visible">                    <Button                        android:id="@+id/button_submit"                        style="@style/CustomFontStyleSecondary"                        android:layout_width="match_parent"                        android:layout_height="wrap_content"                        android:background="@drawable/primary_rounded_rectangle"                        android:text="@string/submit"                        android:textAllCaps="true"                        android:textColor="@color/white"                        android:textSize="@dimen/text_size_14"                        android:textStyle="bold" />                </LinearLayout>                <LinearLayout                    android:id="@+id/linearlayout_create_goal_count_item"                    android:layout_width="match_parent"                    android:layout_height="wrap_content"                    android:layout_below="@+id/submit_btn_layout"                    android:layout_marginLeft="10dp"                    android:layout_marginTop="0dp"                    android:layout_marginRight="10dp"                    android:layout_marginBottom="10dp"                    android:orientation="vertical" />                <LinearLayout                    android:id="@+id/linear_msg_title"                    android:layout_width="match_parent"                    android:layout_height="wrap_content"                    android:layout_below="@+id/linearlayout_create_goal_count_item"                    android:layout_marginTop="5dp"                    android:background="#FF83A8"                    android:padding="10dp"                    android:visibility="gone">                    <TextView                        android:id="@+id/tv_msg_title"                        style="@style/CustomFontStyleSecondary"                        android:layout_width="match_parent"                        android:layout_height="wrap_content"                        android:gravity="center"                        android:padding="5dp"                        android:text="@string/your_goal_is_not_started_yet_to_provide_input"                        android:textColor="@color/white1"                        android:textSize="@dimen/text_size_16" />                </LinearLayout>            </RelativeLayout>        </ScrollView>    </RelativeLayout></RelativeLayout>