<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/screen_background"
    android:fitsSystemWindows="true">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <include layout="@layout/activity_toolbar_layout" />

            <include
                layout="@layout/main_search_toolbar"
                android:visibility="gone" />
        </RelativeLayout>

        <TextView
            android:id="@+id/textview_support_faq_six_tag"
            style="@style/CustomFontStylePrimary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingEnd="@dimen/activity_horizontal_margin"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:text="@string/top_six_question"
            android:textColor="@color/text_color_tertiary"
            android:textSize="@dimen/text_size_20" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/list_background" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ExpandableListView
                android:id="@+id/expandablelistview_support_faq"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:layout_above="@+id/faq_view_more"
                android:childDivider="@color/list_background"
                android:choiceMode="singleChoice"
                android:divider="@color/list_background"
                android:dividerHeight="1dp"
                android:groupIndicator="@null" />

            <TextView
                android:id="@+id/textview_support_faq_warning"
                style="@style/CustomFontStylePrimary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="top|center_horizontal"
                android:drawableTop="@drawable/ic_sad_emoticon_gray"
                android:gravity="center"
                android:padding="@dimen/activity_vertical_margin"
                android:text="@string/no_record_found"
                android:textColor="@color/text_color_tertiary"
                android:textSize="@dimen/text_size_20"
                android:visibility="gone" />

            <Button
                android:id="@+id/button_support_faq_view_more"
                style="@style/CustomFontStylePrimary"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="@dimen/activity_horizontal_margin"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:layout_marginEnd="@dimen/activity_horizontal_margin"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:background="@color/disable_button_color"
                android:text="@string/view_more"
                android:textAllCaps="true"
                android:textColor="@color/text_color_primary"
                android:textSize="@dimen/text_size_18" />
        </RelativeLayout>
    </LinearLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
