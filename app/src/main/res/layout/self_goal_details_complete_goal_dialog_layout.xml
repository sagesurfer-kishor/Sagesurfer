<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/screen_background"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/actionBarSize"
        android:background="@color/white">

        <TextView
            android:id="@+id/textview_selfgoaldetails_completegoaldialog_title"
            style="@style/CustomFontStylePrimary"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="start|center_vertical"
            android:paddingStart="15dp"
            android:paddingEnd="0dp"
            android:text="@string/complete_goal"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/text_size_16" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imageview_selfgoaldetails_completegoaldialog_close"
            android:layout_width="@dimen/actionBarSize"
            android:layout_height="@dimen/actionBarSize"
            android:layout_alignParentEnd="true"
            android:padding="15dp"
            app:srcCompat="@drawable/vi_cancel_gray" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="@color/colorPrimary" />

    <TextView
        android:id="@+id/textview_selfgoaldetails_completegoaldialog_text"
        style="@style/CustomFontStyleSecondary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="start|center_vertical"
        android:padding="15dp"
        android:text="@string/complete_goal_confirmation"
        android:textColor="@color/text_color_primary"
        android:textSize="@dimen/text_size_16" />

    <LinearLayout
        android:id="@+id/linearlayout_selfgoaldetails_completegoaldialog_checkbox"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginStart="15dp"
        android:gravity="start|center_vertical"
        android:minHeight="35dp"
        android:orientation="horizontal">

        <CheckedTextView
            android:id="@+id/checkbox_selfgoaldetails_completegoaldialog_reschedule"
            style="@style/CustomFontStyleSecondary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/self_goal_check_box"
            android:drawablePadding="10dp"
            android:gravity="center"
            android:text="@string/reschedule_goal"
            android:textColor="@color/text_color_primary"
            android:textSize="@dimen/text_size_16" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:background="@color/colorPrimary"
        android:minHeight="100dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="15dp"
            android:layout_height="10dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/vi_angle_arrow_down" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button_selfgoaldetails_completegoaldialog_yes"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:background="@color/white"
                android:text="Yes"
                android:textColor="@color/colorPrimary" />

            <Button
                android:id="@+id/button_selfgoaldetails_completegoaldialog_no"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_marginStart="25dp"
                android:background="@color/white"
                android:text="No"
                android:textColor="@color/colorPrimary" />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>