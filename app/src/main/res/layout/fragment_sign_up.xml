<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/framelayout_signup"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="15dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edittext_signup_role"
                style="@style/CustomFontStyleSecondary"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="14dp"
                android:background="@drawable/white_rounded_rectangle"
                android:drawablePadding="10dp"
                android:gravity="start|center_vertical"
                android:hint="@string/role"
                android:padding="5dp"
                android:singleLine="true"
                android:textColor="@color/colorPrimary"
                android:textColorHint="@color/hint_text_color"
                android:textSize="@dimen/text_size_16" />

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edittext_signup_firstname"
                style="@style/CustomFontStyleSecondary"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="14dp"
                android:background="@drawable/white_rounded_rectangle"
                android:drawablePadding="10dp"
                android:gravity="start|center_vertical"
                android:hint="@string/first_name"
                android:padding="5dp"
                android:singleLine="true"
                android:textColor="@color/colorPrimary"
                android:textColorHint="@color/hint_text_color"
                android:textSize="@dimen/text_size_16" />

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edittext_signup_lastname"
                style="@style/CustomFontStyleSecondary"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="14dp"
                android:background="@drawable/white_rounded_rectangle"
                android:drawablePadding="10dp"
                android:gravity="start|center_vertical"
                android:hint="@string/last_name"
                android:padding="5dp"
                android:singleLine="true"
                android:textColor="@color/colorPrimary"
                android:textColorHint="@color/hint_text_color"
                android:textSize="@dimen/text_size_16" />

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edittext_signup_email"
                style="@style/CustomFontStyleSecondary"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="14dp"
                android:background="@drawable/white_rounded_rectangle"
                android:drawablePadding="10dp"
                android:gravity="start|center_vertical"
                android:hint="@string/email"
                android:padding="5dp"
                android:singleLine="true"
                android:textColor="@color/colorPrimary"
                android:textColorHint="@color/hint_text_color"
                android:textSize="@dimen/text_size_16" />

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edittext_signup_username"
                style="@style/CustomFontStyleSecondary"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="14dp"
                android:background="@drawable/white_rounded_rectangle"
                android:drawablePadding="10dp"
                android:gravity="start|center_vertical"
                android:hint="@string/username"
                android:padding="5dp"
                android:singleLine="true"
                android:textColor="@color/colorPrimary"
                android:textColorHint="@color/hint_text_color"
                android:textSize="@dimen/text_size_16" />

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edittext_signup_password"
                style="@style/CustomFontStyleSecondary"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="14dp"
                android:background="@drawable/white_rounded_rectangle"
                android:drawablePadding="10dp"
                android:gravity="start|center_vertical"
                android:hint="@string/password"
                android:inputType="textPassword"
                android:padding="5dp"
                android:singleLine="true"
                android:textColor="@color/colorPrimary"
                android:textColorHint="@color/hint_text_color"
                android:textSize="@dimen/text_size_16" />

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edittext_signup_confirm_password"
                style="@style/CustomFontStyleSecondary"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="14dp"
                android:background="@drawable/white_rounded_rectangle"
                android:drawablePadding="10dp"
                android:gravity="start|center_vertical"
                android:hint="@string/re_enter_password"
                android:inputType="textPassword"
                android:padding="5dp"
                android:singleLine="true"
                android:textColor="@color/colorPrimary"
                android:textColorHint="@color/hint_text_color"
                android:textSize="@dimen/text_size_16" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="14dp"
                android:background="@drawable/white_rounded_rectangle"
                android:orientation="horizontal"
                android:weightSum="4">

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_weight="3">

                    <TextView
                        android:id="@+id/textview_signup_dob"
                        style="@style/CustomFontStyleSecondary"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:hint="@string/date_of_birth"
                        android:padding="5dp"
                        android:singleLine="true"
                        android:textColor="@color/colorPrimary"
                        android:textColorHint="@color/hint_text_color"
                        android:textSize="@dimen/text_size_16" />
                </com.google.android.material.textfield.TextInputLayout>

                <ImageView
                    android:id="@+id/imageview_signup_dob"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="end|center_vertical"
                    android:layout_marginRight="@dimen/activity_vertical_margin"
                    android:layout_weight="1"
                    android:src="@drawable/vi_angle_arrow_down_blue"
                    android:visibility="visible" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="14dp"
                android:background="@drawable/white_rounded_rectangle"
                android:orientation="horizontal"
                android:weightSum="4">

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_weight="3">

                    <TextView
                        android:id="@+id/textview_signup_security_question"
                        style="@style/CustomFontStyleSecondary"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:hint="@string/security_question"
                        android:padding="5dp"
                        android:textColor="@color/colorPrimary"
                        android:textColorHint="@color/hint_text_color"
                        android:textSize="@dimen/text_size_16" />
                </com.google.android.material.textfield.TextInputLayout>

                <ImageView
                    android:id="@+id/imageview_signup_security_question"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="end|center_vertical"
                    android:layout_marginRight="@dimen/activity_vertical_margin"
                    android:layout_weight="1"
                    android:src="@drawable/vi_angle_arrow_down_blue"
                    android:visibility="visible" />
            </LinearLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/edittext_signup_security_answer"
                style="@style/CustomFontStyleSecondary"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="14dp"
                android:background="@drawable/white_rounded_rectangle"
                android:drawablePadding="10dp"
                android:gravity="start|center_vertical"
                android:hint="@string/answer"
                android:padding="5dp"
                android:singleLine="true"
                android:textColor="@color/colorPrimary"
                android:textColorHint="@color/hint_text_color"
                android:textSize="@dimen/text_size_16" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="14dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageview_signup_captcha_image"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.65" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="0.35"
                    android:gravity="bottom|end">

                    <Button
                        android:id="@+id/button_signup_captcha_reset"
                        style="@style/CustomFontStyleSecondary"
                        android:layout_width="wrap_content"
                        android:layout_height="35dp"
                        android:background="@drawable/white_rounded_rectangle"
                        android:text="@string/reset"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/text_size_16" />
                </LinearLayout>
            </LinearLayout>

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edittext_signup_captcha"
                style="@style/CustomFontStyleSecondary"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="14dp"
                android:background="@drawable/white_rounded_rectangle"
                android:drawablePadding="10dp"
                android:gravity="start|center_vertical"
                android:hint="@string/enter_captcha"
                android:padding="5dp"
                android:singleLine="true"
                android:textColor="@color/colorPrimary"
                android:textColorHint="@color/hint_text_color"
                android:textSize="@dimen/text_size_16" />

            <CheckedTextView
                android:id="@+id/checkedtextview_signup_terms"
                style="@style/CustomFontStyleSecondary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:checked="true"
                android:clickable="true"
                android:drawableStart="@drawable/sign_up_check_box"
                android:drawablePadding="10dp"
                android:text="@string/agree_terms"
                android:textColor="@color/white"
                android:textColorHint="@color/text_color_primary"
                android:textSize="@dimen/text_size_16" />

            <Button
                android:id="@+id/button_signup"
                style="@style/CustomFontStylePrimary"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/white_rounded_rectangle"
                android:gravity="center"
                android:text="@string/sign_up"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/text_size_18" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/textview_signup_account_already"
                style="@style/CustomFontStylePrimary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="30dp"
                android:gravity="center"
                android:text="@string/already_have_account"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_18" />
        </LinearLayout>
    </ScrollView>
</FrameLayout>