<?xml version="1.0" encoding="utf-8"?><LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"    android:layout_width="match_parent"    android:layout_height="wrap_content"    android:layout_gravity="center"    android:gravity="center">    <LinearLayout        android:id="@+id/linearlayout_activity_cleaning"        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:layout_margin="5dp"        android:orientation="vertical">        <RelativeLayout            android:id="@+id/relativelayout_activity"            android:layout_width="52dp"            android:layout_height="52dp"            android:layout_alignParentStart="true"            android:layout_gravity="center"            android:background="@drawable/circle_gray_corners"            android:gravity="center"            android:visibility="visible">            <androidx.appcompat.widget.AppCompatImageView                android:id="@+id/imageview_activity_cleaning"                android:layout_width="20dp"                android:layout_height="20dp"                android:src="@drawable/vi_mood_cleaning" />        </RelativeLayout>        <TextView            android:id="@+id/textview_activity_cleaning"            style="@style/CustomFontStylePrimary"            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:layout_gravity="center"            android:layout_marginTop="@dimen/margin_4"            android:gravity="center"            android:paddingLeft="3dp"            android:paddingRight="3dp"            android:text="@string/cleaning"            android:textColor="@color/white"            android:textSize="@dimen/text_size_11" />    </LinearLayout></LinearLayout>