<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/my_goal_view_grid"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginStart="12dp"
    android:layout_marginEnd="12dp"
    android:layout_marginBottom="7dp"
    android:background="@color/screen_background"
    android:elevation="3dp"
    android:gravity="center"
    android:orientation="vertical"
    tools:targetApi="lollipop">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@color/white"
            android:gravity="center"
            android:onClick="onClick"
            android:orientation="horizontal"
            tools:ignore="NestedWeights"
            tools:targetApi="lollipop">

            <TextView
                android:id="@+id/my_goal_item_caution_one"
                style="@style/CustomFontStyleSecondary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/my_goal_item_icon_one"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="5dp"
                android:gravity="center"
                android:singleLine="true"
                android:text="@string/action_settings"
                android:textColor="@color/text_color_primary"
                android:textSize="@dimen/text_size_14" />

            <ImageView
                android:id="@+id/my_goal_item_icon_one"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_centerInParent="true"
                android:background="@drawable/primary_circle"
                android:padding="4dp"
                android:src="@drawable/ic_inbox_blue" />

            <TextView
                android:id="@+id/my_goal_item_name_one"
                style="@style/CustomFontStyleSecondary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/my_goal_item_icon_one"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="10dp"
                android:gravity="center"
                android:singleLine="true"
                android:text="@string/action_settings"
                android:textColor="@color/text_color_primary"
                android:textSize="@dimen/text_size_16" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@color/white"
            android:gravity="center"
            android:orientation="horizontal"
            tools:ignore="NestedWeights"
            tools:targetApi="lollipop">

            <TextView
                android:id="@+id/my_goal_item_caution_two"
                style="@style/CustomFontStyleSecondary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/my_goal_item_icon_two"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="5dp"
                android:gravity="center"
                android:singleLine="true"
                android:text="@string/action_settings"
                android:textColor="@color/text_color_primary"
                android:textSize="@dimen/text_size_14" />

            <ImageView
                android:id="@+id/my_goal_item_icon_two"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_centerInParent="true"
                android:background="@drawable/sos_attended_circle"
                android:padding="4dp"
                android:src="@drawable/ic_inbox_blue" />

            <TextView
                android:id="@+id/my_goal_item_name_two"
                style="@style/CustomFontStyleSecondary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/my_goal_item_icon_two"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="10dp"
                android:gravity="center"
                android:singleLine="true"
                android:text="@string/action_settings"
                android:textColor="@color/text_color_primary"
                android:textSize="@dimen/text_size_16" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@color/white"
            android:gravity="center"
            android:orientation="horizontal"
            tools:ignore="NestedWeights">

            <TextView
                android:id="@+id/my_goal_item_caution_three"
                style="@style/CustomFontStyleSecondary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/my_goal_item_icon_three"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="5dp"
                android:gravity="center"
                android:singleLine="true"
                android:text="@string/action_settings"
                android:textColor="@color/text_color_primary"
                android:textSize="@dimen/text_size_14" />

            <ImageView
                android:id="@+id/my_goal_item_icon_three"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_centerInParent="true"
                android:background="@drawable/sos_attended_circle"
                android:padding="4dp"
                android:src="@drawable/ic_inbox_blue" />

            <TextView
                android:id="@+id/my_goal_item_name_three"
                style="@style/CustomFontStyleSecondary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/my_goal_item_icon_three"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="10dp"
                android:gravity="center"
                android:singleLine="true"
                android:text="@string/action_settings"
                android:textColor="@color/text_color_primary"
                android:textSize="@dimen/text_size_16" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@color/white"
            android:gravity="center"
            android:orientation="horizontal"
            tools:ignore="NestedWeights">

            <TextView
                android:id="@+id/my_goal_item_caution_four"
                style="@style/CustomFontStyleSecondary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/my_goal_item_icon_four"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="5dp"
                android:gravity="center"
                android:singleLine="true"
                android:text="@string/action_settings"
                android:textColor="@color/text_color_primary"
                android:textSize="@dimen/text_size_14" />

            <ImageView
                android:id="@+id/my_goal_item_icon_four"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_centerInParent="true"
                android:background="@drawable/primary_circle"
                android:padding="4dp"
                android:src="@drawable/ic_inbox_blue" />

            <TextView
                android:id="@+id/my_goal_item_name_four"
                style="@style/CustomFontStyleSecondary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/my_goal_item_icon_four"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="10dp"
                android:gravity="center"
                android:singleLine="true"
                android:text="@string/action_settings"
                android:textColor="@color/text_color_primary"
                android:textSize="@dimen/text_size_16" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>