<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/screen_background"
    android:elevation="1.5dp"
    android:orientation="vertical"
    android:paddingStart="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingEnd="@dimen/activity_horizontal_margin"
    android:paddingBottom="0dp"
    tools:targetApi="lollipop">

    <LinearLayout
        android:id="@+id/supervisor_message_list_item_from_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="50dp"
        android:gravity="start|top"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/supervisor_message_list_item_image"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="top"
            android:src="@drawable/ic_user_male" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/supervisor_message_list_item_message"
                style="@style/CustomFontStylePrimary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/chat_w"
                android:descendantFocusability="blocksDescendants"
                android:gravity="start|center_vertical"
                android:inputType="textMultiLine"
                android:minWidth="70dp"
                android:paddingStart="21dp"
                android:paddingTop="10dp"
                android:paddingEnd="@dimen/activity_horizontal_margin"
                android:paddingBottom="10dp"
                android:singleLine="false"
                android:textColor="@color/text_color_primary"
                android:textSize="@dimen/text_size_16"
                tools:ignore="TextViewEdits" />

            <TextView
                android:id="@+id/supervisor_message_list_item_time"
                style="@style/CustomFontStyleSecondary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="7dp"
                android:gravity="start"
                android:text="@string/action_failed"
                android:textColor="@color/text_color_tertiary"
                android:textSize="@dimen/text_size_12"
                tools:ignore="SmallSp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/supervisor_message_list_item_my_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:gravity="end|top"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:gravity="end"
            android:orientation="vertical">

            <TextView
                android:id="@+id/supervisor_message_list_item_my_message"
                style="@style/CustomFontStyleSecondary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/chat_b"
                android:descendantFocusability="blocksDescendants"
                android:gravity="start|center_vertical"
                android:inputType="textMultiLine"
                android:minWidth="70dp"
                android:paddingStart="@dimen/activity_horizontal_margin"
                android:paddingTop="10dp"
                android:paddingEnd="21dp"
                android:paddingBottom="10dp"
                android:singleLine="false"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_14"
                tools:ignore="TextViewEdits" />

            <TextView
                android:id="@+id/supervisor_message_list_item_my_time"
                style="@style/CustomFontStyleSecondary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="7dp"
                android:gravity="start"
                android:text="@string/action_failed"
                android:textColor="@color/text_color_tertiary"
                android:textSize="@dimen/text_size_12"
                tools:ignore="SmallSp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
