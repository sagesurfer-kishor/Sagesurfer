<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/screen_background"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/actionBarSize"
        android:layout_gravity="top"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/forgot_password_fragment_back"
            android:layout_width="@dimen/actionBarSize"
            android:layout_height="@dimen/actionBarSize"
            android:layout_alignParentStart="true"
            android:padding="15dp"
            app:srcCompat="@drawable/vi_left_arrow_gray" />

        <TextView
            android:id="@+id/forgot_password_fragment_title"
            style="@style/CustomFontStylePrimary"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toEndOf="@+id/forgot_password_fragment_back"
            android:gravity="center_vertical"
            android:text="@string/forgot_password"
            android:textAllCaps="false"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/text_size_16" />

        <TextView
            android:id="@+id/forgot_password_fragment_submit"
            style="@style/CustomFontStyleSecondary"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:gravity="center_vertical"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:text="@string/submit"
            android:textAllCaps="true"
            android:textColor="@color/text_color_primary"
            android:textSize="@dimen/text_size_14" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/colorPrimaryDark" />

    <LinearLayout
        android:id="@+id/forgot_password_support_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="15dp"
        android:visibility="gone">

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/forgot_password_fragment_code"
                style="@style/CustomFontStyleSecondary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start|center_vertical"
                android:hint="@string/code"
                android:maxLength="7"
                android:textColor="@color/text_color_primary"
                android:textColorHint="@color/text_color_primary"
                android:textSize="@dimen/text_size_14" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/forgot_password_fragment_email"
                style="@style/CustomFontStyleSecondary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start|center_vertical"
                android:hint="@string/email"
                android:maxLength="130"
                android:textColor="@color/text_color_primary"
                android:textColorHint="@color/text_color_primary"
                android:textSize="@dimen/text_size_14" />
        </com.google.android.material.textfield.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/forgot_password_fragment_reason"
                style="@style/CustomFontStyleSecondary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start|center_vertical"
                android:hint="@string/reason_for_contact"
                android:maxLength="130"
                android:textColor="@color/text_color_primary"
                android:textColorHint="@color/text_color_primary"
                android:textSize="@dimen/text_size_14" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/forgot_password_fragment_message"
                style="@style/CustomFontStyleSecondary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start|center_vertical"
                android:hint="@string/message"
                android:maxLength="130"
                android:textColor="@color/text_color_primary"
                android:textColorHint="@color/text_color_primary"
                android:textSize="@dimen/text_size_14" />
        </android.support.design.widget.TextInputLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/forgot_password_other_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="15dp">

        <TextView
            style="@style/CustomFontStylePrimary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/basic_information"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/text_size_16" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/forgot_password_fragment_server_code"
                style="@style/CustomFontStyleSecondary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start|center_vertical"
                android:hint="@string/code"
                android:maxLength="7"
                android:textColor="@color/text_color_primary"
                android:textColorHint="@color/text_color_primary"
                android:textSize="@dimen/text_size_14" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/forgot_password_fragment_registered_email"
                style="@style/CustomFontStyleSecondary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start|center_vertical"
                android:hint="@string/registered_email_address"
                android:maxLength="130"
                android:textColor="@color/text_color_primary"
                android:textColorHint="@color/text_color_primary"
                android:textSize="@dimen/text_size_14" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/forgot_password_fragment_username"
                style="@style/CustomFontStyleSecondary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start|center_vertical"
                android:hint="@string/username"
                android:maxLength="130"
                android:textColor="@color/text_color_primary"
                android:textColorHint="@color/text_color_primary"
                android:textSize="@dimen/text_size_14" />
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/forgot_password_fragment_dob"
            style="@style/CustomFontStyleSecondary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/ic_care_drop_down_gray"
            android:gravity="start|bottom"
            android:hint="@string/date_of_birth"
            android:padding="3dp"
            android:textColor="@color/text_color_primary"
            android:textColorHint="@color/text_color_primary"
            android:textSize="@dimen/text_size_14" />

        <TextView
            style="@style/CustomFontStylePrimary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="@string/security_information"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/text_size_16" />

        <TextView
            android:id="@+id/forgot_password_fragment_security_question"
            style="@style/CustomFontStyleSecondary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:text="@string/security_question_user_specified_security_question"
            android:textColor="@color/text_color_read"
            android:textSize="@dimen/text_size_14" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/forgot_password_fragment_security_answer"
                style="@style/CustomFontStyleSecondary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start|center_vertical"
                android:hint="@string/answer"
                android:maxLength="130"
                android:textColor="@color/text_color_primary"
                android:textColorHint="@color/text_color_primary"
                android:textSize="@dimen/text_size_14" />
        </com.google.android.material.textfield.TextInputLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/forgot_password_fragment_captcha"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.65" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.35"
                android:gravity="bottom|end">

                <Button
                    android:id="@+id/forgot_password_fragment_captcha_reset"
                    style="@style/CustomFontStyleSecondary"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:background="@drawable/primary_rounded_rectangle"
                    android:text="@string/reset"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_16" />
            </LinearLayout>
        </LinearLayout>

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/forgot_password_fragment_captcha_answer"
            style="@style/CustomFontStyleSecondary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:background="@drawable/edit_text_primary"
            android:hint="@string/answer"
            android:maxLength="10"
            android:padding="5dp"
            android:textColor="@color/text_color_primary"
            android:textColorHint="@color/text_color_primary"
            android:textSize="@dimen/text_size_14"
            tools:ignore="TextFields" />
    </LinearLayout>
</LinearLayout>