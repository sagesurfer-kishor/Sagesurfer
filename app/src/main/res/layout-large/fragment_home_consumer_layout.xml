                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size_18" />
                </LinearLayout>

                <Button
                    android:id="@+id/button_home_four"
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:layout_gravity="right"
                    android:background="@drawable/pink_circle"
                    android:gravity="center"
                    android:visibility="invisible" />

                <LinearLayout
                    android:id="@+id/linearlayout_home_five"
                    android:layout_width="0dp"
                    android:layout_height="150dp"
                    android:layout_marginLeft="@dimen/activity_vertical_margin"
                    android:layout_weight="1"
                    android:background="@drawable/background_home_menu_circle"
                    android:gravity="center"
                    android:orientation="vertical">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/imageview_home_five"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/vi_home_self_goal" />

                    <TextView
                        android:id="@+id/textview_home_five"
                        style="@style/CustomFontStylePrimary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="@dimen/margin_8"
                        android:gravity="center"
                        android:text="@string/process_outcomes_reports"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size_18" />
                </LinearLayout>

                <Button
                    android:id="@+id/button_home_five"
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:layout_gravity="right"
                    android:background="@drawable/pink_circle"
                    android:gravity="center"
                    android:visibility="invisible" />

                <LinearLayout
                    android:id="@+id/linearlayout_home_six"
                    android:layout_width="0dp"
                    android:layout_height="150dp"
                    android:layout_weight="1"
                    android:background="@drawable/background_home_menu_circle"
                    android:gravity="center"
                    android:orientation="vertical">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/imageview_home_six"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/vi_home_self_goal" />

                    <TextView
                        android:id="@+id/textview_home_six"
                        style="@style/CustomFontStylePrimary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="@dimen/margin_8"
                        android:gravity="center"
                        android:text="@string/process_outcomes_reports"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size_18" />
                </LinearLayout>

