<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:gravity="center_vertical|start"
    android:paddingStart="@dimen/activity_horizontal_margin"
    android:paddingTop="10dp"
    android:paddingEnd="@dimen/activity_horizontal_margin"

    tools:ignore="MissingDefaultResource">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/drawer_list_group_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:paddingTop="@dimen/margin_5"
        android:paddingBottom="@dimen/margin_5"
        android:padding="5dp"
        app:srcCompat="@drawable/primary_circle" />

    <TextView
        android:id="@+id/drawer_list_group_title"
        style="@style/CustomFontStylePrimary"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:padding="5dp"
        android:paddingStart="@dimen/margin_10"
        android:paddingEnd="@dimen/activity_horizontal_margin"
        android:singleLine="true"
        android:text="@string/cancel"
        android:textColor="@color/text_color_primary"
        android:textSize="@dimen/text_size_14"
        app:layout_constraintBottom_toBottomOf="@+id/drawer_list_group_icon"
        app:layout_constraintEnd_toStartOf="@+id/drawer_list_group_end_layout"
        app:layout_constraintStart_toEndOf="@+id/drawer_list_group_icon"
        app:layout_constraintTop_toTopOf="@+id/drawer_list_group_icon"
        app:layout_constraintVertical_bias="0.25" />

    <RelativeLayout
        android:id="@+id/drawer_list_group_end_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:background="@color/transparent"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/margin_5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/drawer_list_group_counter"
            style="@style/CustomFontStyleSecondary"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/counter_rounded_rectangle"

            android:maxWidth="30dp"
            android:minWidth="25dp"
            android:padding="1dp"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_12"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/drawer_list_group_indicator"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_gravity="end|center_vertical"
            android:src="@drawable/ic_solid_arrow_r"
            android:visibility="gone" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"

        android:id="@+id/view_separator"
        android:background="@color/light_gray"
        app:layout_constraintBottom_toBottomOf="parent"
        />
</androidx.constraintlayout.widget.ConstraintLayout>
