<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/container_team_selector"
        android:layout_width="match_parent"
        android:layout_height="@dimen/actionBarSize"
        android:background="@color/colorPrimary">

        <TextView
            android:id="@+id/container_team_selector_text"
            style="@style/CustomFontStylePrimary"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toStartOf="@+id/container_with_team_selector_down_arrow"
            android:ellipsize="end"
            android:gravity="start|center_vertical"
            android:lines="1"
            android:paddingStart="@dimen/activity_horizontal_margin"
            android:paddingEnd="0dp"
            android:text="@string/select_team"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_16" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/container_with_team_selector_down_arrow"
            android:layout_width="@dimen/actionBarSize"
            android:layout_height="@dimen/actionBarSize"
            android:layout_alignParentEnd="true"
            android:padding="@dimen/activity_horizontal_margin"
            app:srcCompat="@drawable/vi_down_arrow_white" />
    </RelativeLayout>

    <FrameLayout
        android:id="@+id/container_with_team_selector_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>
