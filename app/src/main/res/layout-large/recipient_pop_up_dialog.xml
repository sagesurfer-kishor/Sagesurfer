<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/transparent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/activity_horizontal_margin"
        android:background="@color/white"
        android:elevation="1.5dp"
        android:orientation="vertical"
        android:padding="@dimen/activity_horizontal_margin"
        tools:targetApi="lollipop">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                style="@style/CustomFontStylePrimary"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.25"
                android:gravity="start"
                android:text="@string/from_colon"
                android:textColor="@color/text_color_primary"
                android:textSize="@dimen/text_size_14" />

            <TextView
                android:id="@+id/recipient_pop_up_from"
                style="@style/CustomFontStyleSecondary"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.75"
                android:gravity="start"
                android:text="@string/runtime_permissions_txt"
                android:textColor="@color/text_color_tertiary"
                android:textSize="@dimen/text_size_14" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <TextView
                style="@style/CustomFontStylePrimary"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.25"
                android:gravity="start"
                android:text="@string/to_colon"
                android:textColor="@color/text_color_primary"
                android:textSize="@dimen/text_size_14" />

            <TextView
                android:id="@+id/recipient_pop_up_to"
                style="@style/CustomFontStyleSecondary"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.75"
                android:gravity="start"
                android:text="@string/runtime_permissions_txt"
                android:textColor="@color/text_color_tertiary"
                android:textSize="@dimen/text_size_14" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <TextView
                style="@style/CustomFontStylePrimary"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.25"
                android:gravity="start"
                android:text="@string/cc_colon"
                android:textColor="@color/text_color_primary"
                android:textSize="@dimen/text_size_14" />

            <TextView
                android:id="@+id/recipient_pop_up_cc"
                style="@style/CustomFontStyleSecondary"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.75"
                android:gravity="start"
                android:text="@string/runtime_permissions_txt"
                android:textColor="@color/text_color_tertiary"
                android:textSize="@dimen/text_size_14" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <TextView
                style="@style/CustomFontStylePrimary"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.25"
                android:gravity="start"
                android:text="@string/time_colon"
                android:textColor="@color/text_color_primary"
                android:textSize="@dimen/text_size_14" />

            <TextView
                android:id="@+id/recipient_pop_up_time"
                style="@style/CustomFontStyleSecondary"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.75"
                android:gravity="start"
                android:text="@string/runtime_permissions_txt"
                android:textColor="@color/text_color_tertiary"
                android:textSize="@dimen/text_size_14" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>