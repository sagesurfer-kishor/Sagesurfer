<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:gravity="top"
    android:orientation="vertical"
    android:padding="@dimen/activity_horizontal_margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.75"
            android:gravity="bottom|start"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/platform_message_item_priority_icon"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:visibility="gone"
                app:srcCompat="@drawable/vi_exclamation_red" />

            <TextView
                android:id="@+id/platform_message_item_title"
                style="@style/CustomFontStylePrimary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="start"
                android:lines="1"
                android:text="@string/runtime_permissions_txt"
                android:textColor="@color/text_color_primary"
                android:textSize="@dimen/text_size_20" />
        </LinearLayout>

        <TextView
            android:id="@+id/platform_message_item_date"
            style="@style/CustomFontStyleSecondary"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.25"
            android:ellipsize="end"
            android:gravity="end"
            android:lines="1"
            android:text="@string/action_settings"
            android:textColor="@color/text_color_tertiary"
            android:textSize="@dimen/text_size_16" />
    </LinearLayout>

    <TextView
        android:id="@+id/platform_message_item_priority_description"
        style="@style/CustomFontStyleSecondary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:ellipsize="end"
        android:gravity="start"
        android:maxLines="2"
        android:text="@string/runtime_permissions_txt"
        android:textColor="@color/text_color_tertiary"
        android:textSize="@dimen/text_size_18" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:gravity="bottom"
        android:orientation="horizontal">

        <TextView
            style="@style/CustomFontStyleSecondary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:text="@string/from_colon"
            android:textColor="@color/text_color_tertiary"
            android:textSize="@dimen/text_size_18" />

        <TextView
            android:id="@+id/platform_message_item_from_time"
            style="@style/CustomFontStylePrimary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:paddingStart="3dp"
            android:paddingEnd="@dimen/activity_horizontal_margin"
            android:text="@string/from_colon"
            android:textColor="@color/text_color_primary"
            android:textSize="@dimen/text_size_16" />

        <TextView
            style="@style/CustomFontStyleSecondary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:text="@string/to_colon"
            android:textColor="@color/text_color_tertiary"
            android:textSize="@dimen/text_size_16" />

        <TextView
            android:id="@+id/platform_message_item_to_time"
            style="@style/CustomFontStylePrimary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:paddingStart="3dp"
            android:paddingEnd="0dp"
            android:text="@string/to_colon"
            android:textColor="@color/text_color_primary"
            android:textSize="@dimen/text_size_18" />
    </LinearLayout>
</LinearLayout>
