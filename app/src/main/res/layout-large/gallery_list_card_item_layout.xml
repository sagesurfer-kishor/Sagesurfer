<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/transparent">

    <LinearLayout
        android:id="@+id/gallery_list_item_card_main_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/layout_rounded_shadow_list"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/gallery_card_thumbnail"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:scaleType="fitXY"
            android:src="@drawable/login_bg" />

        <TextView
            android:id="@+id/gallery_card_title"
            style="@style/CustomFontStylePrimary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:ellipsize="end"
            android:lines="1"
            android:text="@string/runtime_permissions_txt"
            android:textColor="@color/text_color_primary"
            android:textSize="@dimen/text_size_18" />

        <TextView
            android:id="@+id/gallery_card_name"
            style="@style/CustomFontStyleSecondary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:ellipsize="end"
            android:lines="1"
            android:text="@string/runtime_permissions_txt"
            android:textColor="@color/text_color_tertiary"
            android:textSize="@dimen/text_size_16" />

        <LinearLayout
            android:id="@+id/gallery_card_counter_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:gravity="bottom|start"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginEnd="5dp"
                android:src="@drawable/ic_team_gallery_g" />

            <TextView
                android:id="@+id/gallery_card_count"
                style="@style/CustomFontStyleSecondary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start|center_vertical"
                android:text="@string/action_settings"
                android:textColor="@color/text_color_tertiary"
                android:textSize="@dimen/text_size_13" />
        </LinearLayout>
    </LinearLayout>

    <!--</android.support.v7.widget.CardView>-->

</LinearLayout>