<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingTop="@dimen/activity_vertical_margin">

    <LinearLayout
        android:id="@+id/poll_vote_option_item_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/poll_vote_option_item_radio"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/vote_radio_button"
            android:button="@android:color/transparent"
            android:gravity="center" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:background="@color/white">

            <TextView
                android:id="@+id/poll_vote_option_item_text"
                style="@style/CustomFontStyleSecondary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginEnd="10dp"
                android:layout_toStartOf="@+id/poll_vote_option_item_count"
                android:gravity="start"
                android:text="dummy layout"
                android:textColor="@color/text_color_primary"
                android:textSize="@dimen/text_size_18" />

            <TextView
                android:id="@+id/poll_vote_option_item_count"
                style="@style/CustomFontStyleSecondary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_gravity="start"
                android:layout_marginEnd="5dp"
                android:gravity="start"
                android:text="dummy layout"
                android:textColor="@color/text_color_primary"
                android:textSize="@dimen/text_size_18" />
        </RelativeLayout>

    </LinearLayout>


    <ProgressBar
        android:id="@+id/poll_vote_option_item_pb"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="7dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:progress="20"
        android:progressDrawable="@drawable/progress_bar_vote_primary" />
</LinearLayout>