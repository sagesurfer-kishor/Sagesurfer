<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/material_calendar_weeek_day"
        style="@style/CustomFontStyleSecondary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/relativelayout_date"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:background="@color/transparent"
        android:gravity="center"
        android:paddingBottom="@dimen/margin_6"
        android:text="Sat"
        android:textColor="@color/text_color_primary"
        android:textSize="@dimen/text_size_18"
        android:visibility="gone" />

    <RelativeLayout
        android:id="@+id/relativelayout_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_gravity="center">

        <ImageView
            android:id="@+id/material_calendar_selected_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:minWidth="40dp"
            android:minHeight="40dp"
            android:src="@drawable/calendar_selector_circle"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/material_calendar_day"
            style="@style/CustomFontStyleSecondary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:background="@color/transparent"
            android:gravity="center"
            android:textSize="@dimen/text_size_18" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/material_calendar_saved_data"
        android:layout_width="@dimen/margin_10"
        android:layout_height="@dimen/margin_10"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/margin_4"
        android:src="@drawable/calendar_selector_circle"
        android:visibility="invisible" />
</LinearLayout>