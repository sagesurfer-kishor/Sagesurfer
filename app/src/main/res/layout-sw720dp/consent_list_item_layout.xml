<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:gravity="center_vertical|start"
    android:orientation="horizontal"
    android:paddingStart="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingEnd="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/consent_list_item_file_icon_bg"
            android:layout_width="@dimen/profile_size"
            android:layout_height="@dimen/profile_size" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/consent_list_item_file_icon"
            android:layout_width="@dimen/profile_size"
            android:layout_height="@dimen/profile_size"
            android:padding="7dp"
            app:srcCompat="@drawable/vi_pdf_file" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/consent_list_item_file_name"
                style="@style/CustomFontStylePrimary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="start"
                android:lines="1"
                android:text="@string/runtime_permissions_txt"
                android:textColor="@color/text_color_primary"
                android:textSize="@dimen/text_size_18" />

            <TextView
                android:id="@+id/consent_list_item_time"
                style="@style/CustomFontStyleSecondary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="end"
                android:lines="1"
                android:text="@string/action_settings"
                android:textColor="@color/text_color_tertiary"
                android:textSize="@dimen/text_size_14" />
        </LinearLayout>

        <TextView
            android:id="@+id/consent_list_item_name"
            style="@style/CustomFontStyleSecondary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:gravity="start"
            android:lines="1"
            android:text="@string/runtime_permissions_txt"
            android:textColor="@color/text_color_tertiary"
            android:textSize="@dimen/text_size_16" />
    </LinearLayout>
</LinearLayout>
