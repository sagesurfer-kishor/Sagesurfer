<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relativelayout_multiselect_location_item"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:background="@android:color/white"
    android:gravity="center_vertical"
    android:padding="10dp">

    <ImageView
        android:id="@+id/multi_select_icon"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:contentDescription="TODO"
        android:src="@drawable/ic_user_male" />

    <TextView
        android:id="@+id/multi_select_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/multi_select_icon"
        android:gravity="start|center_vertical"
        android:paddingStart="10dp"
        android:text="@string/app_name"
        android:textColor="@color/text_color_primary"
        android:textSize="@dimen/text_size_20" />

    <CheckBox
        android:id="@+id/multi_select_check_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="10dp"
        android:button="@drawable/self_goal_check_box"
        android:checked="false"
        android:clickable="false" />

</RelativeLayout>